<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Keyboard">
        <param name="android-package" onload="true" value="org.apache.cordova.labs.keyboard.Keyboard" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="StatusBar">
        <param name="android-package" value="org.apache.cordova.statusbar.StatusBar" />
        <param name="onload" value="true" />
    </feature>
    <name>Suap Notas</name>
    <description>Calcule suas notas do Suap!</description>
    <author email="zaqueunilton1@gmail.com">Zaqueu</author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <icon density="mdpi" src="resources/android/res/mipmap-mdpi/icon.png" />
    <icon density="hdpi" src="resources/android/res/mipmap-hdpi/icon.png" />
    <icon density="xhdpi" src="resources/android/res/mipmap-xhdpi/icon.png" />
    <icon density="xxhdpi" src="resources/android/res/mipmap-xxhdpi/icon.png" />
    <icon density="xxxhdpi" src="resources/android/res/mipmap-xxxhdpi/icon.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="AndroidWindowSplashScreenBackground" value="#413d65" />
    <preference name="AndroidWindowSplashScreenIcon" value="resources/android/res/1024.png" />
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="resources/android/res/mipmap-xxxhdpi/icon_adaptive_fore.png" />
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="500" />
</widget>
